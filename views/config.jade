mixin renderApi(api)
    .response
        if api.type === 0
            | Boolean
        else if api.type === 1
            | String

doctype html
html(lang="en-GB")
    head
        title Fake API Server Config Page
    body
        h1 Available APIs

        ul.apis
            each api in apiFiles
                li.api
                    p Path: #{api.path} - #{api.type} - #{api.name}
                    ul.response
                        each val, index in api.response 
                            li #{index}:
                                +renderApi(val)

